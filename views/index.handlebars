<h1>Welcome to the Burger App!</h1>


<ul class="list-group">
  {{#each burger}}
    {{#unless devoured}}
      {{> burger devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>

<ul class="list-group">
  {{#each burger}}
    {{#if devoured}}
      {{> burger devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a deliscious burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ceateBurger">Enter the name of the burger here</label>
    <input type="text" id="CreateBurger" name="name">
  </div>

  <div class="form-group">
    <label for="eatBurger">Pick your burger</label><br>
    <input type="radio" name="devoured" value="1" checked> EATEN!!<br>
    <input type="radio" name="devoured" value="0">
  </div>

  <button type="submit">Add a burger!</button>
</form>
