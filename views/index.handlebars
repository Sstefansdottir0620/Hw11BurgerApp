<h1>Welcome to the Burger App!</h1>

{{!-- <h2>Add a deliscious burger</h2> --}}
<form class="create-form">
  <div class="form-group">
    <label for="createBurger">Add a deliscious burger here</label>
    <input type="text" id="createBurger" name="name"/>
    <button type="submit">Add a burger!</button>
  </div>

  <div class="form-group">
    <label for="eatBurger">Pick your burger</label><br>
    <input type="radio" name="devoured" value="1" checked/> Serve on-to the plate?<br/>
    <input type="radio" name="devoured" value="0" checked/> Add to Burger Menu!
  </div> 
</form>

<div class="row d-flex justify-content-center">
  <div class="col-md-5 text-center">
    <h2>Burger menu!</h2>
    <div class="row text-center">
      <div class="col-md-12 text-center">
         <ul class="list-group">
          {{#each burger}}
            {{#unless devoured}}
              {{>burger/burger-block devoured=1}}
            {{/unless}}
          {{/each}}
          </ul>
      </div>
    </div>
  </div>
  <div class="col-md-5 text-center">
    <h2>Burgers on the plate!</h2>
     <div class="row text-center">
      <div class="col-md-12 text-center">
         <ul class="list-group">
          {{#each burger}}
            {{#if devoured}}
              {{> burger/burger-block devoured=0}}
            {{/if}}
          {{/each}}
          </ul>
      </div>
    </div>
  </div>
  
</div>
